<query id="getSiteInfo" action="select">
	<tables>
		<table name="alliance_sites" />
	</tables>
	<columns>
		<column name="site_srl" />
		<column name="domain" />
		<column name="type" />
		<column name="title" />
		<column name="status" />
		<column name="list_order" />
		<column name="last_update" />
		<column name="regdate" />
	</columns>
	<conditions>
		<condition operation="equal" column="site_srl" var="site_srl" notnull="notnull" />
	</conditions>
</query>